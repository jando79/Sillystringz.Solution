@{
  Layout = "_Layout";
}

@using Factory.Models;

<h1>Factory Locations</h1>

@if (@Model.Count == 0)
{
  <h3>No Location have been added!</h3>
} 

@foreach (Location location in Model)
{
  <li>@Html.ActionLink($"{location.LocationName}", "Details", new { id = location.LocationId })</li>
}

<div id="index-nav">
<p>@Html.ActionLink("Add new Location", "Create")</p>
</div>