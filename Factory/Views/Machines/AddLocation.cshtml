 @{
  Layout = "_Layout";
}

@model Factory.Models.Machine

<h2>Add a location for this machine</h2>

<h4>Add this Machine to a Factory Location: @Html.DisplayFor(model => model.MachineName)</h4>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.MachineId)

    @Html.Label("Select location")
    @Html.DropDownList("LocationId")

    <input type="submit" value="Save" />
}